cijferICOR = (6)
cijferPROG = (7.5)
cijferCSN = (6)
gemiddeldecijfer = ((cijferICOR + cijferPROG + cijferCSN) / 3 )
print (gemiddeldecijfer)
beloningICOR = (6 *30)
beloningPROG = (7.5 * 30)
beloningCSN = (6*30)
totalebeloning = (beloningCSN + beloningPROG + beloningICOR)
print (totalebeloning)
overzicht = 'Mijn cijfers (gemiddeld een ',gemiddeldecijfer,') leveren een beloning van â‚¬ ',totalebeloning,
print (overzicht)